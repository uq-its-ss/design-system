{
  "version": "independent",
  "npmClient": "npm",
  "packages": ["packages/*"],
  "command": {
    "bootstrap": {
      "npmClientArgs": ["--no-package-lock"]
    },
    "publish": {
      "conventionalCommits": true,
      "allowBranch": ["master", "releases"]
    },
    "version": {
      "conventionalCommits": true,
      "allowBranch": ["master", "releases"],
      "message": "chore(release):Publish"
    }
  }
}
