{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 18",

    "compilerOptions": {
        "lib": ["es2020", "DOM"],
        "module": "commonjs",
        "target": "es2020",

        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,

        "sourceMap": true,
        "inlineSources": true,
        "moduleResolution": "node",
        "outDir": "../../dist"
    }
}
